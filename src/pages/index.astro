---
import BlogLayout from '../layouts/BlogLayout.astro';
import Hero from '../components/Hero.astro';
import PostCard from '../components/PostCard.astro';

const base = (import.meta as any).env.BASE_URL || '/';

const recentPosts = [
	{
		title: 'Resumen del Lanzamiento de GPT-5 por OpenAI',
		excerpt: 'OpenAI presentó GPT-5 con mejoras en razonamiento, codificación, multimodalidad y seguridad; la recepción fue mixta.',
		date: '7 Agosto 2025',
		category: 'IA',
		slug: 'resumen-lanzamiento-gpt-5-openai-agosto-2025',
		readTime: '6 min'
	},
	{
		title: 'Cómo la Inteligencia Artificial Está Redefiniendo el Futuro del Trabajo',
		excerpt: 'La IA está transformando roles, automatizando tareas rutinarias y creando nuevas oportunidades; empresas y trabajadores deben adaptarse.',
		date: '18 Agosto 2025',
		category: 'IA',
		slug: 'como-ia-redefiniendo-futuro-del-trabajo',
		readTime: '5 min'
	}
];

---

<BlogLayout title="DevIA Blog" description="Noticias de programación e IA">
	<Hero />

	<section class="featured-section">
		<div class="section-header">
			<h2 class="section-title">Últimas Noticias</h2>
			<p class="section-subtitle">Mantente al día con lo más reciente en programación e IA</p>
		</div>

		<div class="posts-grid">
			{recentPosts.map(post => <PostCard {...post} />)}
		</div>

		<div class="view-all">
			<a href={`${base}posts`} class="view-all-btn">Ver todos los posts →</a>
		</div>
	</section>

</BlogLayout>

<style>
	.featured-section { margin-bottom: 48px; }
	.section-header { text-align: center; margin-bottom: 24px; }
	.section-title { font-size: 28px; font-weight: 700; }
	.section-subtitle { color: #6b7280; }
	.posts-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 24px; }
	.view-all { text-align: center; margin-top: 24px; }
	.view-all-btn { color: white; background: #2563eb; padding: 10px 16px; border-radius: 8px; text-decoration: none; }
</style>