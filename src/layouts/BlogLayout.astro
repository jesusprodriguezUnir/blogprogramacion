---
const {
  title = 'DevIA Blog',
  description = 'Noticias de programación e IA',
  ogImage = '/favicon.svg',
  author = 'DevIA',
  url = (import.meta as any).env.SITE_URL || ''
} = Astro.props;
const base = (import.meta as any).env.BASE_URL || '/';
---
<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={ogImage} />
  <meta property="og:url" content={url} />
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={ogImage} />
  <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
  </head>
  <body>
    <header class="site-header">
      <nav class="nav">
        <a class="brand" href={base}>DevIA Blog</a>
        <div class="links">
          <a href={base}>Inicio</a>
          <a href={`${base}posts`}>Posts</a>
          <a href={`${base}enlaces`}>Enlaces</a>
          <a href={`${base}prompts`}>Prompts</a>
          <a href={`${base}sobre-mi`}>Sobre mí</a>
        </div>
      </nav>
    </header>

    <main class="container">
      <slot />
    </main>

    <footer class="site-footer">
      <p>© {new Date().getFullYear()} DevIA Blog</p>
    </footer>
  </body>
</html>

<style>
  :root { color-scheme: light dark; }
  html, body { margin: 0; padding: 0; font-family: Inter, system-ui, -apple-system, Segoe UI, Roboto, Ubuntu, Cantarell, Noto Sans, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji"; background: #f6f7fb; }
  .site-header { background: white; border-bottom: 1px solid #e5e7eb; position: sticky; top: 0; z-index: 10; }
  .nav { max-width: 1100px; margin: 0 auto; display: flex; align-items: center; justify-content: space-between; padding: 16px; }
  .brand { font-weight: 800; color: #1f2937; text-decoration: none; font-size: 18px; }
  .links { display: flex; gap: 16px; }
  .links a { color: #374151; text-decoration: none; font-weight: 600; }
  .links a:hover { color: #2563eb; }
  .container { max-width: 1100px; margin: 24px auto; padding: 0 16px; }
  .site-footer { text-align: center; color: #6b7280; padding: 24px; }
</style>
